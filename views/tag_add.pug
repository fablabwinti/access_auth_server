extends layout

block content
    h1 #{message}

    form(method='POST' action='/tags')
        div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', name='name' value=(undefined===tag ? '' : tag.name))
        div.form-group
            label(for='uid') Card UID:
            input#uid.form-control(type='text', name='uid' value=(undefined===tag ? '' : tag.uid))
        div.form-group
            button.btn.btn-primary(type='submit') Submit
