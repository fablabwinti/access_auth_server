//- rights.pug
extends layout

block content
    h1 #{message}

    div.form-group
        table
            th RID
            th Tag
            th Machine
            th Start
            th End
            th
                a(href='/right_edit')= 'Add'
            each right in rights
                tr
                    td #{right.rid}
                    td #{right.tag} 
                    td #{right.machine}
                    td #{right.start}
                    td #{right.end}
                    td
                        a(href='/right_edit?rid=' + right.rid)= 'Edit'
