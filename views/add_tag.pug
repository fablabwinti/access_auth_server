doctype basic
html
  head
    title #{title}
    style label {display:inline-block; width: 80px; margin-bottom:4px;}
  body
    block content
        h1 #{message}

        form(method='POST' action='/tags')
            div.form-group
                label(for='name') Name:
                input#name.form-control(type='text', name='name' value=(undefined===tag ? '' : tag.name))
            div.form-group
                label(for='uid') Card UID:
                input#uid.form-control(type='text', name='uid' value=(undefined===tag ? '' : tag.uid))
            div.form-group
                input#tid.form-control(type='hidden', name='tid' value=(undefined===tag ? '' : tag.tid))
            div.form-group
                button.btn.btn-primary(type='submit') Submit
