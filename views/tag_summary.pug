doctype basic
html
    head
        title #{title}
        style label {display:inline-block; width: 80px; margin-bottom:10px;}
        style table {border:1px solid black; border-spacing:0; font-size:16px; font-family: "Trebuchet MS",Arial,Helvetica,sans-serif; margin-bottom:10px;}
        style tr:nth-child(2n) {background-color: #f2f2f2;}
        style td, th {border:1px solid #ddd; text-align:left; padding:8px;}
        style th {padding-top:11px; padding-bottom:11px; background-color:#4CAF50; color:white;}
            
    body
        block content
            h1 #{message}

            form(method='POST' action='/tag_summary')
                div.form-group
                    label(for='uid') Card ID:
                    input#tid.form-control(type='text', name='uid' value=(undefined===tag ? '' : tag.uid))
                div.form-group
                    label(for='name') Name:
                    input#name.form-control(type='text', name='name' value=(undefined===tag ? '' : tag.name))
                div.form-group
                    table
                        th Timestamp
                        th Machine
                        th Event
                        th Remarks
                        each log in logs
                            tr
                                td #{log.timestamp}
                                td #{log.machine} 
                                td #{log.event}
                                td #{log.remarks}

                div.form-group
                    button.btn.btn-primary(type='submit') Submit
